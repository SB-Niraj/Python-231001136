T = int(input())
for _ in range(T):
    N = int(input())
    arr = list(map(int, input().split()))
    k = int(input())
    i, j = 0, len(arr) - 1
    while i < j:
        diff = arr[i] - arr[j]
        if diff == k:
            print(1)
            break
        elif diff < k:
            i += 1
        else:
            j -= 1
    if i == j:
         print(0)
    else:
         print(1)              
   
